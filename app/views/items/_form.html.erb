<%= form_for @item, html: { multipart: true } do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :item_type %><br>
    <%= f.select :item_type, [ 'Painting', 'Enamel'], class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :item_tag %><br>
    <%= f.select :item_tag, [ 'Abstract', 'Modern','Landscape', 'Animals', 'Urban', 'Nature', 'Portrait', 'Ring', 'Necklace', 'Bracelet', 'Earring', 'Pin', 'Icon', 'Other' ], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :sold_out%><br>
    <%= f.select :sold_out, [['No',0],['Yes',1],['Discounted',2]], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date_of_creation %><br>
    <%= f.text_field :date_of_creation, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :height %><br>
    <%= f.text_field :height, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :width %><br>
    <%= f.text_field :width, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :width2 %><br>
    <%= f.text_field :width2, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :shape %><br>
    <%= f.select :shape, ['Square', 'Horizontal', 'Vertical'], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :additional_info %><br>
    <%= f.text_field :additional_info, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :discount %><br>
    <%= f.text_field :discount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.select :artist_id, options_from_collection_for_select(@artists, "id", "name") %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>