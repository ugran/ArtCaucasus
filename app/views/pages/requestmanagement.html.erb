<table class='table table-stripped' style='margin-top:30px;'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>
      <th>Item</th>
      <th>User</th>
      <th>Email</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.created_at.strftime("%d %b. %Y") %></td>
        <td><% if request.status.present? %><%= request.status %><%else%>-<%end%></td>
        <td><%= link_to request.item.name, request.item %></td>
        <td><% if request.user.present? %><%= request.user.email %><%else%>-<% end %></td>
        <td><% if request.email.present? %><%= request.email %><%else%>-<% end %></td>
        <td>edit</td>
      </tr>
    <% end %>
  </tbody>
</table>